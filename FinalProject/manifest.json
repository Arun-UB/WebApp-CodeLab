{
  "name": "wReader",
  "version": "0.0.1",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },
  "permissions": [
    "experimental",
    "appWindow",
    "*://blog.chromium.org/feeds/*"
  ],
  "intents": {
    "http://webintents.org/view": [
      { 
        "type": ["application/rss+xml", "application/atom+xml"],
        "href": "/index.html",
        "title": "wReader",
        "disposition" : "inline"
      }
    ]
  }
}
